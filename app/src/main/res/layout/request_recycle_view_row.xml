<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:stretchColumns="1,2,3,4,5,6">

    <TableRow android:layout_margin="10dp">

        <TextView
            android:id="@+id/Date_Request"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:text="2022-02-26"
            android:textColor="@color/secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Title_Request"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:text="Title Entry"
            android:textColor="@color/secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Requester_Request"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:text="Requster"
            android:textColor="@color/secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ViewRequest"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:clickable="true"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:text="View "
            android:textColor="@color/actionbar"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ApproveRequest"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:clickable="true"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:text="Approve"
            android:textColor="@color/actionbar"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/DeclineRequest"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:clickable="true"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:text="Decline"
            android:textColor="@color/actionbar"
            android:textSize="12sp" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:background="@color/secondary" />
</TableLayout>